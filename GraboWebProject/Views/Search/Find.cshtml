@model IEnumerable<GraboWebProject.Product>

@{
    ViewBag.Title = "Find";
}

<h2>Find</h2>
<!doctype html>
<html>
<head>
    <style type="text/css">
        body
        {
            margin: 0;
            padding: 0;
            height: 100%;
        }
        p
        {
            text-indent:35px;            
            font-weight: bold;
            color: #CC9900;
            font-family:sans-serif;
            font-size:larger;
            margin-top: 20px;
        }
        hr
        {
            margin-top: 40px;
        }
        .result
        {
        	margin-top: 40px;
        }
        .upper-menu
        {
            width: 960px;
            height: 80px;
            background-color: green;
            margin-left: auto;
            margin-right: auto;
        }
        .navigation
        {
            margin-left: auto;
            margin-right: auto;
            width: 960px;
            background-color: yellow;
            height: 1000px;
        }
        .main
        {
            margin-left: auto;
            margin-right: auto;
            width: 750px;
        }
        
        
        #header
        {
            font-size: xx-large;
            font-style: oblique;
            color: White;
            margin-left: 5px;
            width: 100px;
        }

        #search
        {
            float: right;
            height: 10px;
        }        

        .search-input
        {
            width: 400px;
        }
        
    </style>
</head>
<body>
    
    <div class="navigation">
        <div class="upper-menu">
            <div id="header">
                eat</div>
            <div id="search">
                <form action="" method="post">
                <input type="text" name="criteria" value="Product" class="search-input">
                <input type="submit" value="Search">
                </form>
            </div>
        </div>
        <div class="main">
            @foreach(var item in Model)
            {
                <div class="result">
                    <a href="../SelectProduct?selected=@item.Name" name="name">@Html.DisplayFor(modelItem => item.Name)</a>
                </div>
            }
        </div>
    </div>
</body>
