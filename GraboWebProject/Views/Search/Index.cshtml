@model IEnumerable<GraboWebProject.Product>

@{
    ViewBag.Title = "Product search";
}

<h2>Search for products</h2>
<!doctype html>
<html>
<head>
    <style type="text/css">
        body
        {
            margin: 0;
            padding: 0;
            height: 100%;
        }
        .navigation
        {
            width: 960px;
            height: 1000px;
        }
        .main
        {
            margin-left: auto;
            margin-right: auto;
            width: 750px;
        }     

        .search-input
        {
            width: 400px;
        }
        .home
        {
        	float: right;
        }
        .form
        {
        	margin-left: auto;
        	margin-right: auto;
        }
        
    </style>
</head>
<body>
    
    <div class="navigation">
        <div class="main">
            <div class="home">
                @Html.ActionImage("Index", "Statistics", "/Content/home.png", "")
            </div>
            <form action="Search/Find/" method="post">
                <input type="text" name="criteria" value="Product" class="search-input">
                <input type="submit" value="Search">
             </form>
        </div>
    <//div>
